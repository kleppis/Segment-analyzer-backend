generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt   @id
  email     String? 
  name      String?
  stravaId  BigInt   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SegmentBestWindScore {
  segmentId     BigInt   @unique
  bestWindScore Float
  bestAt        DateTime
  updatedAt     DateTime @updatedAt
}
